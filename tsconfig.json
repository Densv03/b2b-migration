/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "paths": {
      "@b2b/ngx-button": [
        "projects/ngx-button/src/public-api"
      ],
      "@b2b/ngx-select": [
        "projects/ngx-select/src/public-api"
      ],
      "@b2b/ngx-link": [
        "projects/ngx-link/src/public-api"
      ],
      "@b2b/ngx-input": [
        "projects/ngx-input/src/public-api"
      ],
      "@b2b/shared": [
        "projects/shared/src/public-api",
      ],
      "@b2b/ngx-icon": [
        "projects/ngx-icon/src/public-api"
      ],
      "@b2b/ngx-image": [
        "projects/ngx-image/src/public-api"
      ],
      "@b2b/id-generator": [
        "projects/id-generator/src/public-api"
      ],
      "@b2b/ngx-checkbox": [
        "projects/ngx-checkbox/src/public-api"
      ],
      "@b2b/ngx-country-select": [
        "projects/ngx-country-select/src/public-api"
      ],
      "@b2b/ngx-back": [
        "projects/ngx-back/src/public-api"
      ],
      "ngx-category-dropdowns": [
        "dist/ngx-category-dropdowns"
      ],
      "@b2b/ngx-toggle": [
        "projects/ngx-toggle/src/public-api"
      ],
      "@b2b/ngx-textarea": [
        "projects/ngx-textarea/src/public-api"
      ],
      "@b2b/ngx-password": [
        "projects/ngx-password/src/public-api"
      ],
    },
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "lib": [
      "ES2022",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
